<h1>Update Question</h1>
{{#if errors.length}}
<p>Couldn't update the question:</p>
<ul>
	{{#each errors}}
	<li>{{this}}</li>
	{{/each}}
</ul>
{{/if}}
<form class="row g-3" method="post">
	<div classs="container">
		<div class="col-4">
			<textarea name="ques">{{question.ques}}</textarea>
		</div>
	</div>
	<div classs="container">
		<div class="col-4">
			<textarea name="ans">{{question.ans}}</textarea>
		</div>
	</div>
	<div class="card-body">
		<button class="btn btn-secondary" type="submit" value="Update">Update</button>
	</div>
	<div class="card-body">
		<a class="btn btn-secondary" href="\questions" role="button">Questions page</a>
	</div>
	</div>
</form>